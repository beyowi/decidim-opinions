<div class="picker-header">
  <h1><%= t("opinions_picker.choose_opinions", scope: "decidim.opinions") %></h1>
  <input type="text" name="opinions-filter" id="opinions_filter" placeholder="<%= t("decidim.admin.filters.search_placeholder.id_string_or_title_cont", collection: opinions_collection_name) %>">
</div>
<div class="picker-content picker-list" data-picker-path="<%= picker_path %>" data-picker-more="<%= more_opinions? %>">
  <%= render :opinions %>
</div>
<div class="picker-footer">
  <div class="buttons button--double">
    <a class="button" data-close=""><%= t("opinions_picker.close", scope: "decidim.opinions") %></a>
  </div>
</div>

<%= javascript_include_tag "decidim/opinions/admin/opinions_picker" %>
