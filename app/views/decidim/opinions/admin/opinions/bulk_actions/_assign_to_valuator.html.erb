<div id="js-assign-opinions-to-valuator-actions" class="hide js-bulk-action-form">
  <%= form_tag(valuation_assignment_path, method: :post, id: "js-form-assign-opinions-to-valuator", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% opinions.each do |opinion| %>
        <%= check_box_tag "opinion_ids[]", opinion.id, false, class: "js-check-all-opinion js-opinion-id-#{opinion.id}" %>
      <% end %>
    </div>

    <%= bulk_valuators_select(current_participatory_space, t("decidim.opinions.admin.opinions.index.assign_to_valuator")) %>

    <%= submit_tag(t("decidim.opinions.admin.opinions.index.assign_to_valuator_button"), id: "js-submit-assign-opinions-to-valuator", class: "button small button--simple float-left") %>

    <button id="js-cancel-assign-opinions-to-valuator" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.opinions.admin.opinions.index.cancel") %></button>
  <% end %>
</div>
