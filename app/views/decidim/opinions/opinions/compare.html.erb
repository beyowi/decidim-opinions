<% add_decidim_page_title(opinion_wizard_step_title(action_name)) %>

<div class="row">
  <%= render partial: "wizard_aside" %>

  <div class="columns large-6">
    <%= render partial: "wizard_header", locals: { callout_step_help_text_class: "warning" } %>

    <% if @similar_opinions.presence %>
      <div class="row small-up-1 card-grid">
        <% @similar_opinions.each do |opinion| %>
          <%= render partial: "opinion_similar", locals: { opinion: opinion } %>
        <% end %>
      </div>
    <% end %>

    <div class="row column text-center">
      <%= link_to t(".continue"), complete_opinion_path(@opinion), class: "button small" %>
    </div>
  </div>

  <div class="columns large-3"></div>
</div>
