<div class="p-s">
  <h4><%= t(".document_index") %></h4>
  <div class="text-muted">
    <% @opinions.each do |opinion| %>
      <div class="mb-s">
        <p>
          <%= link_to resource_locator(opinion).path do %>
            <% if opinion.participatory_text_level == "article" %>
              <u><%= decidim_html_escape(present(opinion).title).html_safe %></u>
            <% else %>
              <u><%= decidim_html_escape(present(opinion).title).html_safe %></u>
            <% end %>
            <br>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
